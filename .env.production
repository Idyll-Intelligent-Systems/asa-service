# ASA Service Production Environment Configuration
# Full PostgreSQL Database Integration with Real Data Scraping

# Application Settings
NODE_ENV=production
PORT=3000

# Database Configuration - PostgreSQL Full Integration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=asa_service
DB_USER=postgres
DB_PASSWORD=postgres

# Database Behavior
SKIP_DATABASE=false
DROP_EXISTING_DB=false
ENABLE_DATA_SCRAPING=true
POPULATE_WITH_REAL_DATA=true

# Data Sources Configuration
ENABLE_DODODEX_SCRAPING=true
ENABLE_WIKIDATA_SCRAPING=true
ENABLE_WIKILY_SCRAPING=true

# API Configuration
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=300

# Development Features (set to false for production)
DEVELOPMENT_MODE=false
VERBOSE_LOGGING=false
