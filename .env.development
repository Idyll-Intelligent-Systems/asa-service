# ASA Service Environment Configuration

# Node Environment
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug
VERBOSE_LOGGING=true

# Database Configuration (PostgreSQL)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=asa_maps

# Alternative: Full database URL (overrides individual settings above)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/asa_maps

# Wiki Update Configuration
WIKI_UPDATE_INTERVAL=6h
AUTO_WIKI_UPDATE=true

# Logging Configuration
LOG_LEVEL=info

# Performance Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# API Settings
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Security (for production)
# JWT_SECRET=your-secret-key
# CORS_ORIGIN=https://yourdomain.com
