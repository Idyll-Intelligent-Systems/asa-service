# Development Environment Variables
NODE_ENV=development
PORT=3000

# Database Configuration
SKIP_DATABASE=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=asa_service
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/asa_service

# Development Features
USE_MOCK_DATA=false
ENABLE_MOCK_DATA=true
AUTO_POPULATE_DATA=true
DROP_EXISTING_DB=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_BASE_URL=http://localhost:3000/api
CORS_ORIGIN=http://localhost:3000

# External Services
WIKI_BASE_URL=https://ark.wiki.gg
DODODEX_BASE_URL=https://www.dododex.com

# Cache Configuration
CACHE_TTL_HOURS=24
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=debug
VERBOSE_LOGGING=true
LOG_FILE=logs/app.log

# Data Population
BATCH_SIZE=100
REQUEST_DELAY_MS=200

# Feature Flags
ENABLE_WIKI_SCRAPING=true
ENABLE_DODODEX_INTEGRATION=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
