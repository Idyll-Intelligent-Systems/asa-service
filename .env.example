# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/asa_service

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_BASE_URL=https://your-domain.com/api
CORS_ORIGIN=https://your-frontend-domain.com

# External Services
WIKI_BASE_URL=https://ark.wiki.gg
DODODEX_BASE_URL=https://www.dododex.com

# Cache Configuration
CACHE_TTL_HOURS=24
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Data Population
BATCH_SIZE=100
REQUEST_DELAY_MS=200

# Feature Flags
ENABLE_WIKI_SCRAPING=true
ENABLE_DODODEX_INTEGRATION=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
